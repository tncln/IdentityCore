@model UserUpdateViewModel
@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="UpdateUser" asp-controller="Panel" method="post" class="w-75 mx-auto p-3">
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.SurName"></label>
        <span asp-validation-for="SurName" class="text-danger"></span>
        <input asp-for="SurName" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
        <input asp-for="Email" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.PhoneNumber"></label>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        <input asp-for="PhoneNumber" />
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <label>Bir Önceki Resminiz</label>
                <img src="~/img/@Model.PictureUrl" alt="@Model.Name" class="w-100 img-fluid" />
            </div>
            <div class="col-md-8">
                <input type="file" asp-for="@Model.Picture" />
            </div>
            <button type="submit" class="btn btn-info btn-sm"> Kaydet</button>
        </div>
    </div>

</form>

