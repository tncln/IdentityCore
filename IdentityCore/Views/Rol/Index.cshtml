@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a asp-action="AddRole" asp-controller="Rol" class="btn btn-info btn-sm my-2">Yeni Rol Ekle</a>

<table class="table table-sm table-hover">
    <tr>
        <td>AD</td>
        <td>İşlem</td>
    </tr>
    @if (Model.Count > 0)
    {
        foreach (var item in Model)
        {
<tr>
    <td>@item.Name</td>
    <td><a asp-action="UpdateRole" asp-route-id="@item.Id" class="btn btn-warning btn-sm"></a></td>
</tr>
        }
    }
    else
    {
        <tr>
            <td>Kayıtlı Rol bulunmamaktadır.</td>
        </tr>
    }

</table>