@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="RoleAssign" asp-controller="Rol" method="post" class="w-75 p-3 mx-auto">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="checkbox" name="@Model[i].Name" class="form-check-input" value="@Model[i].Exist" />
            <label class="form-check-label" for="@Model[i].Name">@Model[i].Name</label>
        </div>
    }
    <input type="submit" value="Kaydet" class="btn btn-info btn-sm" />
</form>

